<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/hosts/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form 
  id="new-form" 
  action="/hosts/<%= host._id %>?_method=PUT" 
  method="POST"
  >
  <label for="name-input">Name:</label>
    <input required type="text" name="name" value="<%= host.name %>" id="name-input">
    <label for="age-input">Age:</label>
    <input required type="number" name="age" value="<%= host.age %>" id="age-input">
    <label for="email-input">Email:</label>
    <input type="email" name="email" value="<%= host.email %>" id="email-input">
    <button type="submit">Save</button>
  </form>
</main>

<%- include("../partials/footer") %>