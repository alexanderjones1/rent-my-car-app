<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/hosts/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
<section>
  <div><%= host.name %></div>
  <a href="/hosts/<%= host._id %>/edit">
    <button>Edit Profile</button>
  </a>
  <img id="avatar" src="<%= host.avatar %>">
  <div><%= host.age %></div>
  <div><%= host.email %></div>
  <div><%= host.eligible %></div>
  <% if (host.cars.length) { %>
    <h3>Here will be your car!</h3>
  <% } else { %>
    <h3>No cars have been added to your profile.</h3>
    <a href="/cars/new" <%- title === "Add Car" ? 'class="active"' : "" %>
    >
    Add Car
    </a>
  <% } %>
</section>

<%- include("../partials/footer") %>